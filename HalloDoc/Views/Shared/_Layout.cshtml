
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HalloDoc</title>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

</head>
<body>
    <header class="shadow">
        <div class="d-flex justify-content-between bg-white rounded-0 border-bottom">
            <div class="d-inline-flex">
                <a class="text-decoration-none align-self-center" data-bs-toggle="offcanvas" href="#offcanvasExample">
                    <i class="fa-solid fa-bars text-info border rounded border-info d-block d-md-none my-3 p-2"></i>
                </a>
                <img id="halloDocLogo" class="img-fluid img-responsive p-3" src="~/images/Fig56._Patient_site_1.png" />
            </div>
            <div class="d-inline-flex align-items-center p-3">
                <label class="d-none d-sm-block">Welcome <strong>@CV.UserID()</strong></label>
                <a class="text-decoration-none"><i class="d-block d-sm-none fa-solid fa-arrow-right-from-bracket text-info border rounded border-info mx-3 mx-xs-2 my-3 p-2"></i></a>
                <a class="d-none d-sm-block btn border border-info text-info mx-3  mx-xs-2">Logout</a>
                <a href=""><i class="fas fa-moon text-info border rounded border-info my-3 p-2"></i></a>
            </div>
        </div>
        <partial name="../AdminDashBoard/AdminSubNav"/>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <strong class="offcanvas-title" id="offcanvasExampleLabel">Welcome, Admin</strong>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav">
                    <li class="nav-item mt-2">
                        <a asp-controller="AdminDashBoard" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller ="ProviderLocation" asp-action="Index">Provider Location</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="MyProfile" asp-action="Index">My Profile</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Providers" asp-action="Index">Providers</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Partners" asp-action="Index">Parteners</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Access" asp-action="Index">Access</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Records" asp-action="Index">Records</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <main role="main" class="pt-2 min-vh-100 bg-light">
        @RenderBody()
    </main>
    <footer class="footer sticky-bottom">
        <div class=" justify-content-end w-100 d-flex bg-dark text-light py-3">
            <div class="text-center me-3">
                <span class="text-center mx-2">
                    Term Of Condition
                </span>
                <span>
                    I
                </span>
                <span class="mx-2">
                    Privacy Policy
                </span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="@Url.Content("~/plugins/mvc-jquery-ajax/jquery.unobtrusive-ajax.js")"></script>
    <script src="@Url.Content("~/plugins/mvc-jquery-validate/jquery.validate.js")"></script>
    <script src="@Url.Content("~/plugins/mvc-jquery-validate/jquery.validate.unobtrusive.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
