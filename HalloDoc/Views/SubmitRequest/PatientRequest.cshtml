@{
    Layout = "_RequestLayout";
    string path = Context.Request.Path;
}
@model HalloDoc.Entity.Models.PatientModels.CreatePatientRequestModel
<partial name="../SubmitRequest/Confirmation.cshtml" />

<div class="d-flex justify-content-center">
    <div class="d-flex flex-column my-2 col-lg-8 col-md-10">
        <div class="d-flex justify-content-end pe-2">
            <a onclick="history.go(-1);" class="btn border border-info">
                <strong class="text-info">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i> Back
                </strong>
            </a>
        </div>
        <div class="shadow bg-white rounded m-2 p-2">
            <!-- Patient Information -->
            <strong class="fs-5 p-2">Patient Information</strong>
            <form method="post" asp-controller="@(path.StartsWith("/AdminDashBoard") ? "AdminDashBoard" : "SubmitRequest")" asp-action="CreatePatientRequest" enctype="multipart/form-data">
                <div class="row p-2">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="Symptoms" class="form-control shadow-none" placeholder="Leave a comment here" id="Symptoms" style="height: 100px"></textarea>
                            <label for="Symptoms"><small>Enter Brief Details Of Symptoms</small></label>
                        </div>
                        <span asp-validation-for="Symptoms" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" type="text" class="form-control shadow-none" id="FirstName" placeholder="Enter First Name" autocomplete="off">
                            <label for="FirstName">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="LastName" type="text" class="form-control shadow-none" id="LastName" placeholder="Enter Last Name" autocomplete="off">
                            <label for="LastName">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DateOfBirth" type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control shadow-none" id="DateOfBirth" placeholder="Enter Date of Birth" autocomplete="off">
                            <label for="DateOfBirth">Date of Birth</label>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Patient Contact Information -->
                <strong class="fs-5 p-2">Patient Contact Information</strong>

                <div class="row p-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" id="email" class="form-control shadow-none" placeholder="name@example.com" autocomplete="off">
                            <label for="email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 phone">
                        <div class="form-floating mb-3 h-100">
                            <input asp-for="PhoneNumber" type="tel"  class="form-control shadow-none" id="phone" autocomplete="off" />
                            <span id="error-msg" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6" id="password" style="display:none;">
                        <div class="form-floating mb-3">
                            <input asp-for="PassWord" type="password" class="form-control shadow-none" id="pwd" placeholder="Password" autocomplete="off">
                            <label for="pwd">Password</label>
                            <span asp-validation-for="PassWord" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6" id="confirmPassword" style="display:none;">
                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" type="password" class="form-control shadow-none" id="confirm_pwd" placeholder="Confirm Password" autocomplete="off">
                            <label for="confirm_pwd">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Patient Location -->
                <strong class="fs-5 p-2">Patient Location</strong>

                <div class="row p-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Street" type="text" class="form-control shadow-none" id="Street" placeholder="Enter Street" autocomplete="off">
                            <label for="Street">Street</label>
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="City" type="text" class="form-control shadow-none" id="City" placeholder="Enter City" autocomplete="off">
                            <label for="City">City</label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select class="form-select" required aria-label="Phone" asp-for="State" data-allow-clear="true" tabindex="-1" id="region2" asp-items="@(new SelectList(ViewBag.RegionComboBox,"RegionId","RegionName"))" data-control="select2" data-placeholder="Select Level">
                                <option value="">Select States</option>
                            </select>
                            <label for="region2">State</label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ZipCode" type="text" class="form-control shadow-none" id="ZipCode" placeholder="Enter Zip Code" autocomplete="off">
                            <label for="ZipCode">Zip Code</label>
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="RoomSuite" type="text" class="form-control shadow-none" id="RoomSuite" placeholder="Enter Room / Suite" autocomplete="off">
                            <label for="RoomSuite">Room / Suite (Optional)</label>
                        </div>
                    </div>
                </div>

                <!-- Upload Photo or Document -->
                <strong class="fs-5 p-2">Upload Photo or Document (Optional)</strong>

                <div class="row p-2">
                    <div>
                        <div class="col-12 border rounded">
                            <div class="d-flex justify-content-between">
                                <span id="fileName" class="p-3">No file chosen</span>
                                <a class="btn bg-info btn btn-lg" onclick="document.getElementById('files').click()">
                                    <span for="files" class="btn text-white">
                                        <i class="fa fa-cloud-upload"></i>
                                        Upload
                                    </span>
                                </a>
                                <input asp-for="UploadFile" id="files" type="file" class="d-none" onchange="DisplayFileName()">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-info text-white mx-2" id="submit">Submit</button>
                    <a asp-controller="CreateRequest" asp-action="Index" class="btn border border-info text-info mx-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    
    $(document).ready(function () {
        phone1();
    });
    
    $(function () {
        $("#email").focusout(function () {
            var email = $("#email").val();
            $.ajax({
                type: "POST",
                url: '@Url.Action("CheckEmail", "SubmitRequest")?email=' + email,
                cache: false,
                success: function (response) {
                    var flag = response.isAspnetuser;
                    if (flag) {
                        // Show the confirm password and password fields
                        $("#confirmPassword").show();
                        $("#password").show();
                    } else {
                        $("#confirmPassword").hide();
                        $("#password").hide();
                    }
                },
                error: function () {
                    alert("Error while checking email.");
                }
            });
        });
    });
</script>

