
<div class="modal fade" id="SendLink" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header  bg-info text-white">
                <h4 class="modal-title fs-5" id="exampleModalLabel">Send mail to patient for submitting the request</h4>
                <i class="fa-solid fa-xmark" data-bs-dismiss="modal"></i>
            </div>
            <form asp-action="SendLink" asp-controller="AdminDashBoard" method="post" class="needs-validation" novalidate>
                <div class="modal-body">
                    <div class="col my-3">
                        <div class="form-floating">
                            <input id="Phonenumber_sendAgreement" name="Firstname" type="text" class="form-control shadow-none inputs" placeholder="PhoneNumber" required>
                            <label for="Phonenumber_sendAgreement">First Name</label>
                            <div class="invalid-feedback">
                                Please Enter First Name.
                            </div>
                        </div>
                    </div>
                    <div class="col my-3">
                        <div class="form-floating">
                            <input id="Phonenumber_sendAgreement" name="Lastname" type="text" class="form-control shadow-none inputs" placeholder="PhoneNumber" required>
                            <label for="Phonenumber_sendAgreement">Last Name</label>
                            <div class="invalid-feedback">
                                Please Enter Last Name.
                            </div>
                        </div>
                    </div>
                    <div class="col my-3">
                        <div class="form-floating">
                            <input id="Phonenumber_sendAgreement" name="Mobile" type="text" class="form-control shadow-none inputs" placeholder="PhoneNumber" required>
                            <label for="Phonenumber_sendAgreement">Phone Number</label>
                            <div class="invalid-feedback">
                                Please Enter Phone Number.
                            </div>
                        </div>
                    </div>
                    <div class="col mb-3">
                        <div class="form-floating">
                            <input id="Email_sendAgreement" type="text" name="Email" class="form-control shadow-none inputs" placeholder="Email" required>
                            <label for="Email_sendAgreement">Email</label>
                            <div class="invalid-feedback">
                                Please Enter Email.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class=" btn btn-info text-white">Send</button>
                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>