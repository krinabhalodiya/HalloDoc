<!-- Modal -->
<div class="modal fade" id="transfercase" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header  bg-info text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Transfer Physician </h1>
                <i class="fa-solid fa-xmark" data-bs-dismiss="modal"></i>
            </div>
            <form asp-action="TransferProvider" asp-controller="AdminActions">
                <div class="modal-body">
                    <small class="modal-title">to transfer this request,select and search another physician.</small>
                    <input type="hidden" name="requestid" id="RequestID_Input_ModelTransferCase" />
                    <div class="col my-3">
                        <div class="form-floating">
                            <select class="form-select input-outline input-outline-select w-100" required aria-label="Phone" name="region" data-allow-clear="true" tabindex="-1" onchange="myFunction1()" id="region3" asp-items="@(new SelectList(ViewBag.RegionComboBox,"RegionId","RegionName"))" data-control="select2" data-placeholder="Select Level">
                                <option>Select Region</option>
                            </select>
                            <label for="region2">Region</label>
                        </div>
                    </div>
                    <div class="col mb-3">
                        <div class="form-floating">
                            <select class="form-select input-outline input-outline-select w-100" required name="ProviderId" data-allow-clear="true" tabindex="-1" id="provider" data-control="select2" data-placeholder="Select Level">
                                <option>Select Physician</option>
                            </select>
                            <label for="provider">Select Physician</label>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea id="changenote" placeholder=" " name="Notes" class="input-outline w-100 fs-6 form-control shadow-none" type="text" style=" height:100px;"></textarea>
                        <label class="inputs-lable inputs-lable-textarea fs-6" id="notedata">Notes</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class=" btn btn-info text-white" value="Assign">Assign</button>
                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">

    function myFunction1() {


        var region = $("#region3").val();

        $.ajax({
            type: "POST",
            url: '@Url.Action("ProviderbyRegion", "AdminActions")?Regionid=' + region,
            cache: false,
            success: function (response) {
                console.log(response);
                var s = '<option value="-1">Please Select</option>';
                for (var i = 0; i < response.length; i++) {
                    s += '<option value="' + response[i].physicianid + '">' + response[i].firstname + ' ' + response[i].lastname + '</option>';
                }
                $("#provider").html(s);
            },
            error: function () {
                alert("Error while checking email.");
            }
        });
    }

</script>